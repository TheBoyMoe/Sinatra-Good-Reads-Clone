<div class="main wrapper">
  <h1>My Books</h1>
  <!-- Display all the users shelves in Tab Menu -->

  <% all_shelf = current_user.shelves.find_by(title: 'all') %>
  <% if all_shelf && all_shelf.books.size > 0 %>
    <ul class="book-shelf all">
      <% all_shelf.books.each do |book| %>
        <li class="book">
          <p><%= book.title %></p>
          <p><%= book.author %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No books found!</p>
  <% end %>
</div>
