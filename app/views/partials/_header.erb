<!-- navbar -->
<header>
  <div class="ui secondary pointing menu">

      <% if logged_in? %>
        <h1><a class="ui item" href="/shelves">Simplereads</a></h1>
      <% else %>
        <h1><a class="ui item" href="/">Simplereads</a></h1>
      <% end %>

      <!-- right-hand side menu -->
      <div class="right menu">
        <% if path_info != '/login' && path_info != '/signup'   %>
          <div class="ui item">
            <form class="ui form" action="/search" accept-charset="UTF-8" method="post">
              <div class="ui icon input">
                <input type="text" name="query" id="query" placeholder="isbn, author, title"/>
                <i class="circular search link icon" type="submit"></i>
              </div>
            </form>
          </div>
        <% end %>
        <% if !logged_in? %>
          <% if path_info == '/login' %>
            <a class="ui item" href="/signup">signup</a>
          <% else %>
            <a class="ui item" href="/login">login</a>
          <% end %>
        <% else %>
          <a class="ui item" href="/logout">logout</a>
        <% end %>
      </div>
</header>
